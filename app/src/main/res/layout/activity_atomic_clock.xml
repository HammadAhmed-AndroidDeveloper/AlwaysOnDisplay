<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".atomic.AtomicClockActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_1sdp"
            android:orientation="horizontal">

            <com.leondzn.simpleanalogclock.SimpleAnalogClock
                android:id="@+id/atomic1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_120sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_weight="1"
                android:background="@color/black"
                android:padding="@dimen/_7sdp"
                app:faceDrawable="@drawable/atomic_dial_1"
                app:hourDrawable="@drawable/hour1"
                app:hourTint="@color/white"
                app:minuteDrawable="@drawable/minute1"
                app:minuteTint="@color/haf_black"
                app:secondDrawable="@drawable/second1"
                app:secondTint="@color/teal_200" />

            <com.leondzn.simpleanalogclock.SimpleAnalogClock
                android:id="@+id/atomic2"
                android:layout_width="0dp"
                android:layout_height="@dimen/_120sdp"
                android:layout_weight="1"
                android:background="@color/black"
                android:padding="@dimen/_7sdp"
                app:faceDrawable="@drawable/atomic_dial_2"
                app:hourDrawable="@drawable/hour2"
                app:hourTint="@color/white"
                app:minuteDrawable="@drawable/minute2"
                app:minuteTint="@color/haf_black"
                app:secondDrawable="@drawable/second2"
                app:secondTint="@color/teal_200" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_1sdp"
            android:orientation="horizontal">

            <com.leondzn.simpleanalogclock.SimpleAnalogClock
                android:id="@+id/atomic3"
                android:layout_width="0dp"
                android:layout_height="@dimen/_120sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_weight="1"
                android:background="@color/black"
                android:padding="@dimen/_7sdp"
                app:faceDrawable="@drawable/atomic_dial_3"
                app:hourDrawable="@drawable/hour3"
                app:hourTint="@color/white"
                app:minuteDrawable="@drawable/minute3"
                app:minuteTint="@color/haf_black"
                app:secondDrawable="@drawable/second3"
                app:secondTint="@color/teal_200" />

            <com.leondzn.simpleanalogclock.SimpleAnalogClock
                android:id="@+id/atomic4"
                android:layout_width="0dp"
                android:layout_height="@dimen/_120sdp"
                android:layout_weight="1"
                android:background="@color/black"
                android:padding="@dimen/_7sdp"
                app:faceDrawable="@drawable/atomic_dial_4"
                app:hourDrawable="@drawable/hour4"
                app:hourTint="@color/white"
                app:minuteDrawable="@drawable/minute4"
                app:minuteTint="@color/haf_black"
                app:secondDrawable="@drawable/second4"
                app:secondTint="@color/teal_200" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_1sdp"
            android:orientation="horizontal">

            <com.leondzn.simpleanalogclock.SimpleAnalogClock
                android:id="@+id/atomic5"
                android:layout_width="0dp"
                android:layout_height="@dimen/_120sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_weight="1"
