<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <RelativeLayout
        android:id="@+id/wid2layout"
        android:layout_width="wrap_content"
        android:layout_height= "wrap_content"
        android:layout_centerInParent="true">


        <at.grabner.circleprogress.CircleProgressView
            android:id="@+id/cpv_second6"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_230sdp"
            android:layout_centerInParent="true"
            app:cpv_barColor="@color/yellow2"
            app:cpv_barWidth="@dimen/_10sdp"
            app:cpv_blockCount="200"
            app:cpv_blockScale="0.3"
            app:cpv_maxValue="60"
            app:cpv_minValueAllowed="0"
            app:cpv_rimColor="@color/haf_black"
            app:cpv_rimWidth="@dimen/_10sdp"
            app:cpv_textSize="0dp"
            app:cpv_value="35" />
        <at.grabner.circleprogress.CircleProgressView
            android:id="@+id/cpv_minute6"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_210sdp"
            android:layout_centerInParent="true"
            app:cpv_barColor="@color/pink"
            app:cpv_blockCount="100"
            app:cpv_blockScale="0.3"
            app:cpv_maxValue="60"
            app:cpv_minValueAllowed="0"
            app:cpv_rimColor="@color/haf_black"
            app:cpv_textSize="0dp"
            app:cpv_value="35" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <LinearLayout
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextClock
                        android:id="@+id/Time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="none"
                        android:format24Hour="hh"
                        android:singleLine="true"
                        android:text="04"
                        android:textColor="@color/yellow2"
                        android:textSize="@dimen/_40sdp"
                        android:textStyle="bold" />

                    <TextClock
                        android:id="@+id/jj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="none"
                        android:format24Hour="mm"
                        android:singleLine="true"
                        android:text="50"
                        android:textColor="@color/yellow2"
                        android:textSize="@dimen/_40sdp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/digital10_bg3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextClock
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:ellipsize="none"
                        android:format24Hour="aa"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="am"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_30sdp" />

                    <TextClock
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:ellipsize="none"
                        android:format24Hour="EEE"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="Fri"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_30sdp" />
                </LinearLayout>

            </LinearLayout>

            <TextClock
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/time"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:ellipsize="none"
                android:format24Hour="dd MMM yyyy"
                android:singleLine="true"
                android:text="12 december 2022"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
